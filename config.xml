<?xml version='1.0' encoding='utf-8'?>
<widget id="com.themetalfleece.dobbler_score" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dobbler Score</name>
    <description>
        A score keeper for the game Dobbler
    </description>
    <author email="jathanasoglou@gmail.com" href="https://www.linkedin.com/in/jason-athanasoglou-017a49122/">
        Jason Athanasoglou
    </author>
    <icon src="res/icon/logo.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/mipmap-ldpi/ds_logo.png" />
        <icon density="mdpi" src="res/icon/android/mipmap-mdpi/ds_logo.png" />
        <icon density="hdpi" src="res/icon/android/mipmap-hdpi/ds_logo.png" />
        <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/ds_logo.png" />
        <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi/ds_logo.png" />
        <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi/ds_logo.png" />
        <splash density="land-ldpi" src="res/screen/android/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="res/screen/android/drawable-land-mdpi/screen.png" />
        <splash density="land-hdpi" src="res/screen/android/drawable-land-hdpi/screen.png" />
        <splash density="land-xhdpi" src="res/screen/android/drawable-land-xhdpi/screen.png" />
        <splash density="land-xxhdpi" src="res/screen/android/drawable-land-xxhdpi/screen.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/drawable-land-xxxhdpi/screen.png" />
        <splash density="port-ldpi" src="res/screen/android/drawable-ldpi/screen.png" />
        <splash density="port-mdpi" src="res/screen/android/drawable-mdpi/screen.png" />
        <splash density="port-hdpi" src="res/screen/android/drawable-hdpi/screen.png" />
        <splash density="port-xhdpi" src="res/screen/android/drawable-xhdpi/screen.png" />
        <splash density="port-xxhdpi" src="res/screen/android/drawable-xxhdpi/screen.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/drawable-xxxhdpi/screen.png" />
    </platform>
    <widget android-versionCode="10002" id="com.themetalfleece.dobbler_score" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    </widget>
    <exclude-files pattern="js/index.raw.js" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-file" spec="^5.0.0" />
    <plugin name="cordova-plugin-exclude-files" spec="^0.2.4" />
    <engine name="android" spec="^7.0.0" />
    <engine name="browser" spec="^5.0.2" />
</widget>
